<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MarketBot" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@color/primaryDarkColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.MarketBot.Dark">
        <item name="colorPrimaryDark">#27272F</item>
        <item name="colorAccent">#33333D</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Widget.MarketBot.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.MarketBot.ContentLoadingProgress" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/primaryDarkColor</item>
    </style>

    <style name="Theme.MarketBot.Activities">
        <item name="android:windowContentTransitions">true</item>

    </style>

