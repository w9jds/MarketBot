<resources>

    <style name="MarketBot" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorHint">@color/hint_disabled_dark</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>

        <item name="android:statusBarColor">@color/immersive_bars</item>
        <item name="android:navigationBarColor">@color/immersive_bars</item>
    </style>

    <style name="MarketBot.Activities">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
    </style>

    <style name="MarketBot.Activities.MainActivity">

    </style>

    <style name="MarketBot.Activities.ItemActivity">

    </style>

    <style name="Widget.Light.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor">true</item>
        <item name="android:gravity">left</item>
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="Widget.MarketBot.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@android:style/TextAppearance.Material.Widget.ActionBar.Title</item>
        <item name="android:background">@color/primary</item>
        <item name="android:theme">@style/MarketBotDarkOverlay</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="Widget.MarketBot.Toolbar.SmallCapsTitle">
        <item name="titleTextAppearance">@style/TextAppearance.ToolbarTitleSmallCaps</item>
    </style>

    <style name="Widget.MarketBot.Toolbar.ItemToolbar" parent="Widget.MarketBot.Toolbar.SmallCapsTitle">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="Widget.MarketBot.OverlayToolbar" parent="android:Widget.Material.ActionBar">
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Widget.MarketBot.Toolbar.Accent">
        <item name="android:background">?android:colorAccent</item>
        <item name="android:titleTextAppearance">@style/TextAppearance.AccentToolbar</item>
    </style>

    <style name="TextAppearance.AccentToolbar" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/text_on_accent</item>
    </style>

    <style name="TextAppearance.ToolbarTitleSmallCaps" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="MarketBotDarkOverlay" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar">

    </style>

</resources>
