<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable name="marketType"
            type="com.w9jds.marketbot.classes.models.market.MarketType" />
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5"/>

        <TextView
            android:id="@+id/mass_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mass_label"
            android:textSize="15sp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/mass_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <TextView
            android:id="@+id/mass_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/mass_label"
            app:layout_constraintEnd_toStartOf="@+id/guideline"/>

        <TextView
            android:id="@+id/volume_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volume_label"
            android:textSize="15sp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/volume_value"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintHorizontal_chainStyle="packed" />

        <TextView
            android:id="@+id/volume_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/volume_label"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/capacity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/capacity_label"
            android:textSize="15sp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mass_label"
            app:layout_constraintEnd_toStartOf="@+id/capacity_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <TextView
            android:id="@+id/capacity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/capacity_label"
            app:layout_constraintTop_toTopOf="@+id/capacity_label"
            app:layout_constraintBottom_toBottomOf="@+id/capacity_label"
            app:layout_constraintEnd_toStartOf="@+id/guideline" />

        <TextView
            android:id="@+id/portion_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/portion_label"
            android:textSize="15sp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="@+id/capacity_label"
            app:layout_constraintBottom_toBottomOf="@+id/capacity_label"
            app:layout_constraintEnd_toStartOf="@+id/portion_value"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <TextView
            android:id="@+id/portion_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/capacity_label"
            app:layout_constraintBottom_toBottomOf="@+id/capacity_label"
            app:layout_constraintStart_toEndOf="@+id/portion_label"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>

